<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".TaskUpdateActivity">
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="867dp"
        android:layout_height="400dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="@string/bg"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background1" />


    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="34dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/goback"
        app:layout_constraintEnd_toStartOf="@+id/imageView9"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/navibar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:srcCompat="@drawable/menu"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="757dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/view12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">


        <ScrollView
            android:layout_width="411dp"
            android:layout_height="768dp"
            android:fillViewport="true"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="58dp">

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/abeezee"
                    android:text="@string/update_task"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/darkBlue"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view27"
                    android:layout_width="340dp"
                    android:layout_height="220dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rectangle_shape_task"
                    app:layout_constraintEnd_toEndOf="@+id/view26"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/view26"
                    app:layout_constraintTop_toBottomOf="@+id/view26" />

                <View
                    android:id="@+id/view26"
                    android:layout_width="340dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rectangle_shape_task"
                    app:layout_constraintEnd_toEndOf="@+id/view25"
                    app:layout_constraintStart_toStartOf="@+id/view25"
                    app:layout_constraintTop_toBottomOf="@+id/view25"
                    tools:ignore="MissingConstraints" />

                <View
                    android:id="@+id/view24"
                    android:layout_width="340dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="44dp"
                    android:background="@drawable/rectangle_shape_task"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView43" />

                <View
                    android:id="@+id/view25"
                    android:layout_width="340dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rectangle_shape_task"
                    app:layout_constraintEnd_toEndOf="@+id/view24"
                    app:layout_constraintStart_toStartOf="@+id/view24"
                    app:layout_constraintTop_toBottomOf="@+id/view24" />


                <EditText
                    android:id="@+id/updateTextName"
                    android:layout_width="305dp"
                    android:layout_height="54dp"
                    android:autofillHints="Date"
                    android:ems="10"
                    android:hint="@string/task_name"
                    android:inputType="text"
                    android:textColor="@color/darkBlue"
                    android:textColorHint="@color/darkBlue"
                    app:layout_constraintBottom_toBottomOf="@+id/view24"
                    app:layout_constraintEnd_toEndOf="@+id/view24"
                    app:layout_constraintHorizontal_bias="0.514"
                    app:layout_constraintStart_toStartOf="@+id/view24"
                    app:layout_constraintTop_toTopOf="@+id/view24" />

                <EditText
                    android:id="@+id/updateTextDescription"
                    android:layout_width="305dp"
                    android:layout_height="54dp"
                    android:autofillHints="Date"
                    android:ems="10"
                    android:hint="@string/description"
                    android:inputType="text"
                    android:textColor="@color/darkBlue"
                    android:textColorHint="@color/darkBlue"
                    app:layout_constraintBottom_toBottomOf="@+id/view27"
                    app:layout_constraintEnd_toEndOf="@+id/view27"
                    app:layout_constraintStart_toStartOf="@+id/view27"
                    app:layout_constraintTop_toTopOf="@+id/view27"
                    app:layout_constraintVertical_bias="0.162" />

                <EditText
                    android:id="@+id/updateTextDate"
                    android:layout_width="305dp"
                    android:layout_height="54dp"
                    android:autofillHints="Date"
                    android:ems="10"
                    android:hint="@string/date"
                    android:inputType="date"
                    android:textColor="@color/darkBlue"
                    android:textColorHint="@color/darkBlue"
                    app:layout_constraintBottom_toBottomOf="@+id/view25"
                    app:layout_constraintEnd_toEndOf="@+id/view25"
                    app:layout_constraintHorizontal_bias="0.514"
                    app:layout_constraintStart_toStartOf="@+id/view25"
                    app:layout_constraintTop_toTopOf="@+id/view25"
                    app:layout_constraintVertical_bias="0.692" />

                <EditText
                    android:id="@+id/updateTextTime"
                    android:layout_width="302dp"
                    android:layout_height="43dp"
                    android:autofillHints="Time"
                    android:ems="10"
                    android:hint="@string/time"
                    android:inputType="date"
                    android:textColor="@color/darkBlue"
                    android:textColorHint="@color/darkBlue"
                    app:layout_constraintBottom_toBottomOf="@+id/view26"
                    app:layout_constraintEnd_toEndOf="@+id/view26"
                    app:layout_constraintHorizontal_bias="0.473"
                    app:layout_constraintStart_toStartOf="@+id/view26"
                    app:layout_constraintTop_toTopOf="@+id/view26"
                    app:layout_constraintVertical_bias="1.0" />

                <Button
                    android:id="@+id/updateTaskBtn"
                    android:layout_width="228dp"
                    android:layout_height="67dp"
                    android:layout_marginBottom="36dp"
                    android:backgroundTint="@color/darkBlue"
                    android:fontFamily="@font/allerta"
                    android:text="@string/update_task"
                    android:textColor="@color/cream"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="32dp">

                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>

    <View
        android:id="@+id/view10"
        android:layout_width="421dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/footer_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view8"
        app:layout_constraintVertical_bias="0.85" />

    <View
        android:id="@+id/view12"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="170dp"
        android:layout_marginEnd="171dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circle_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/AddTaskBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/footer_circle_shape"
        app:layout_constraintBottom_toBottomOf="@+id/view12"
        app:layout_constraintEnd_toEndOf="@+id/view12"
        app:layout_constraintStart_toStartOf="@+id/view12"
        app:layout_constraintTop_toTopOf="@+id/view12" />

    <View
        android:id="@+id/view8"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/plus_sign"
        app:layout_constraintBottom_toBottomOf="@+id/AddTaskBtn"
        app:layout_constraintEnd_toEndOf="@+id/AddTaskBtn"
        app:layout_constraintStart_toStartOf="@+id/AddTaskBtn"
        app:layout_constraintTop_toTopOf="@+id/AddTaskBtn" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="37dp"
        android:layout_height="46dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/pp"
        app:layout_constraintBottom_toBottomOf="@+id/view10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view10"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/profile" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="33dp"
        android:layout_height="34dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view12"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/view10"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="32dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/calander"
        app:layout_constraintEnd_toStartOf="@+id/view12"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/view10"
        app:srcCompat="@drawable/calendar__1_" />

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/email"
        app:layout_constraintEnd_toStartOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toEndOf="@+id/view12"
        app:layout_constraintTop_toTopOf="@+id/view10"
        app:srcCompat="@drawable/email" />

</androidx.constraintlayout.widget.ConstraintLayout>